{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$INPUT_DIR": "$BASE_DIR/opto_input",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 24000.0,
    "dt": 0.1,
    "dL": 2000000.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 36.0,
    "v_init": -70.0
  },
  "input": {
    "opto_input":{
      "node_set":"PN_cells",
      "section_name":"soma",
      "uptake_prob":0.2,
      "intensity_file_path":"opto_input/fake_intensity_data.npy",
      "pulse_file":"opto_input/combined_checkerboard_spikes_unstable.csv",
      "probe_file_path":"opto_input/combined_probe_positions_unstable.csv",
      "stim_params":{
        "record_currents": false,
        "nPulses": 1,
        "Dt_on": 2,
        "Dt_off": 95,
        "gmax": 0.04,
        "tauChR2": 0.4,
        "Gd1": 0.25,
        "Gd2": 0.5,
        "light_intensity": 2
      }
    }  
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5",
    "overwrite_output_dir": true
  },
"reports": {
    "ecp": {
      "cells": "all",
      "variable_name": "v",
      "module": "extracellular",
      "electrode_positions": "$BASE_DIR/components/recXelectrodes/single_electrode.csv",
      "file_name": "ecp.h5",
      "electrode_channels": "all",
      "minimum_distance": "auto"
    },
    "membrane_potential": {
      "module": "membrane_report",
      "cells": "all",
      "variable_name": "v",
      "sections": "soma",
      "file_name": "v_traces.h5"
  }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "circuit_config.json"
}